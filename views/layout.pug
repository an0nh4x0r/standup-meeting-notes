doctype html
html
    head
        title= title
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title Virtual Standup Meeting Notes
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(href='/stylesheets/bootstrap.min.css', rel='stylesheet')
    body
        nav.navbar.navbar-default
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle Navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') Virtual Standup
                #navbar.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        if title == 'Home'
                            li.active
                                a(href='/') Home
                        else
                            li
                                a(href='/') Home
                        if title == 'New Note'
                            li.active
                                a(href='/newnote') New Note
                        else
                            li
                                a(href='/newnote') New Note
                        if title == 'Discuss'
                            li.active
                                a(href='/discuss') Discuss
                        else
                            li
                                a(href='/discuss') Discuss

        block content


    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js', type='text/javascript')
    script(src='/javascripts/bootstrap.min.js', type='text/javascript')